@model BOL.HomeViewModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

@using (Html.BeginForm("ListEmployeeMeeting", "Home", FormMethod.Post))
{
<table class="table">
    <td style="width:25%">
        <tr>
            <th style="text-align: left">
                Name
            </th>
        </tr>
        <tr style="border: 1px solid; text-align: left;">
            @foreach (var item in Model.employees)
            {
                <tr>
                    <td style="text-align:left">
                        <a>
                            @Html.ActionLink((item.F_Name + " " + item.L_Name), "ListEmployeeMeeting", new { id = item.Id })
                        </a>
                    </td>

                    @*<td>
                            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
                            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
                            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
                        </td>*@
                </tr>
            }
        </tr>
    </td>

    <td style="width:50%">
        <tr>
            <th style="text-align: center">
                Selected Employee's Meeting
            </th>
        </tr>
        <tr style="border: 1px solid;">
            @if (!(Model.empMeetings == null))
            {
                foreach (var item in Model.empMeetings)
                {
                    <tr>
                        <td style="text-align:left">
                            <a>
                                @Html.DisplayFor(modelItem => item.Meeting.Topic, "ListEmployeeMeeting", new { id = item.Id })
                            </a>
                        </td>

                    </tr>
                }
            }
        </tr>
    </td>
    <td>

    </td>
</table>
}

