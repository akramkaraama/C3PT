@model BOL.HomeViewModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<div class="container">
    
    <div class="col-md-3">
        @using (Html.BeginForm("ListEmployeeMeeting", "Home", FormMethod.Post))
        {
            <table class="table">                    
                <tr>
                    <th style="text-align: left">
                        <b>Employees</b>
                    </th>
                </tr>
                <tr style="border: 1px solid; text-align: left;">
                    @foreach (var item in Model.employees)
                    {
                        <tr>
                            <td style="text-align:left">
                                <a> @Html.ActionLink((item.F_Name + " " + item.L_Name), "Index", new { id = item.Id })  </a>
                            </td>

                            @*<td>
                                @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
                                @Html.ActionLink("Details", "Details", new { id=item.Id }) |
                                @Html.ActionLink("Delete", "Delete", new { id=item.Id })
                            </td>*@
                        </tr>
                    }
                </tr>                    
            </table>
        }
    </div>

    <div class="col-md-5">
        <table class="table">
            <tr>
                <th style="text-align: left">
                    <b>Employee Meetings Schedule</b>
                </th>
            </tr>
            @if (!(Model.employee_Meetings == null))
            {
                foreach (var item in Model.employee_Meetings)
                {
                    <tr>
                        <td style="text-align:left">
                            <a> @Html.DisplayFor(modelItem => item.Meeting.Topic, "ListEmployeeMeeting", new { id = item.Id }) </a>
                        </td>
                    </tr>
                }
            }
        </table>            
    </div>
    <div class="col-md-4">
        <table class="table">
            <tr>
                <th style="text-align: left">
                    <b>Employee Meeting Details</b>
                </th>
            </tr>
            @if (!(Model.employee_Meetings == null))
            {
                foreach (var item in Model.employee_Meetings)
                {
                    <tr>
                        <td style="text-align:left">
                            <a> @Html.DisplayFor(modelItem => item.Meeting.Topic, "ListEmployeeMeeting", new { id = item.Id }) </a>
                        </td>
                    </tr>
                }
            }
        </table>
    </div>
</div>
