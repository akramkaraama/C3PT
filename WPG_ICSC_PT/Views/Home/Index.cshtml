@model IPagedList<BOL.Employee>
@using PagedList.Mvc;
@using PagedList;
@{
    ViewBag.Title = "Home Page";
}
@section Scripts{
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>

    <script type="text/javascript">

        function ClearMeetingDetails() {
            $('#meetingDetails').replaceWith(' <div id="meetingDetails"></div> ');
        }

    </script>
}
<br />
<div class="container">
    <div class="row">
        <div class="col-md-4">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h3 class="panel-title text-center">Employee Meetings</h3>
                </div>
                <div class="panel-body">
                    <table class="table table-striped table-hover table-bordered table-condensed table-responsive ">
                        <thead>
                            <tr class="modal-title label-success">
                                <th>Employee</th>
                                <th>Meetings</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var emp in Model)
        {

                    <tr>
                        <td>
                            @Ajax.ActionLink(emp.F_Name + " " + emp.L_Name, "EmployeeMeetings", "Meeting", new { empId = emp.Id },
                 new AjaxOptions
                 {
                     HttpMethod = "GET", // HttpMethod to use, GET or POST
                                    UpdateTargetId = "empMeeting", // ID of the HTML element to update
                                    InsertionMode = InsertionMode.Replace // Replace the existing contents
                                }, new { onclick = "ClearMeetingDetails()" }) @*&nbsp; Guest: <span class="badge">@emp.Employee_Guest.Count</span>*@
                            </td>

                            <td>
                                &nbsp;<span class="badge">@emp.Meeting_Employee.Count</span>
                            </td>
                        </tr>
}
                        </tbody>
                    </table>
                </div>
                @Html.PagedListPager(Model, page => Url.Action("Index", new { page }), new PagedListRenderOptions() { Display = PagedListDisplayMode.IfNeeded })
            </div>
        </div>
        <div class="col-md-4">
            <div id="empMeeting">

            </div>
        </div>
        <div class="col-md-4">
            <div id="meetingDetails">

            </div>
        </div>
    </div>


</div>
