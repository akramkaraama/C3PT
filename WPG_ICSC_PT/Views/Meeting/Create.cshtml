@using (Html.BeginForm("Create", "Meeting", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <br />
    <div class="form-horizontal">
        <div class="container">
            <div class="row">
                <table class="table table-striped table-hover table-bordered table-condensed table-responsive ">
                    <thead class="col-md-5">
                        <tr class="modal-title label-success">
                            <div class="panel panel-primary">
                                <div class="panel-heading">
                                    <h3 class="panel-title text-center">Schedule A Meeting</h3>
                                </div>
                            </div>
                        </tr>
                    </thead>
                    <tbody>
                        <tr class="modal-title label-success text-center">
                            <th class="text-center">Meeting</th>
                        </tr>
                        <tr>
                            <td>
                                <div class="panel-body">
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                    <br />
                                    <div class="form-group glyphicon-align-center">
                                        @Html.LabelFor(model => model.Meeting.MeetingType_id, "Meeting Type:", htmlAttributes: new { @class = "control-label col-md-2" })
                                        <div class="col-md-10">
                                            @Html.DropDownList("MeetingType_id", null, htmlAttributes: new { @class = "form-control" })
                                            @Html.ValidationMessageFor(model => model.Meeting.MeetingType_id, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        @Html.LabelFor(model => model.Meeting.Meeting_Date, "Meeting Date:", htmlAttributes: new { @class = "control-label col-md-2" })
                                        <div class="col-md-10 ">
                                            @Html.EditorFor(model => model.Meeting.Meeting_Date, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.Meeting.Meeting_Date, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        @Html.LabelFor(model => model.Meeting.Start_Time, "Start Time:", htmlAttributes: new { @class = "control-label col-md-2" })
                                        <div class="col-md-10 ">
                                            @Html.EditorFor(model => model.Meeting.Start_Time, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.Meeting.Start_Time, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        @Html.LabelFor(model => model.Meeting.End_Time, "End Time:", htmlAttributes: new { @class = "control-label col-md-2" })
                                        <div class="col-md-10 ">
                                            @Html.EditorFor(model => model.Meeting.End_Time, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.Meeting.End_Time, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        @Html.LabelFor(model => model.Meeting.Date_Scheduled, "Today's Date:", htmlAttributes: new { @class = "control-label col-md-2" })
                                        <div class="col-md-10">
                                            @Html.EditorFor(model => model.Meeting.Date_Scheduled, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.Meeting.Date_Scheduled, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        @Html.LabelFor(model => model.Meeting.Topic, "Topic/Agenda: ", htmlAttributes: new { @class = "control-label col-md-2" })
                                        <div class="col-md-10">
                                            @Html.EditorFor(model => model.Meeting.Topic, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.Meeting.Topic, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        @Html.LabelFor(model => model.Meeting.MeetingStatus_id, "Meeting Status:", htmlAttributes: new { @class = "control-label col-md-2" })
                                        <div class="col-md-10">
                                            @Html.DropDownList("MeetingStatus_id", null, htmlAttributes: new { @class = "form-control" })
                                            @Html.ValidationMessageFor(model => model.Meeting.MeetingStatus_id, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        @Html.LabelFor(model => model.Employee.Id, "Employee", htmlAttributes: new { @class = "control-label col-md-2" })
                                        <div class="col-md-10">
                                            @Html.DropDownList("Employee_Id", null, htmlAttributes: new { @class = "form-control" })
                                            @Html.ValidationMessageFor(model => model.Employee.Id, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.MeetingEmployee.RequirementOption_Id, "Required Attendee:", htmlAttributes: new { @class = "control-label col-md-2" })
                                        <div class="col-md-10">
                                            @Html.DropDownList("RequirementOption_Id", null, htmlAttributes: new { @class = "form-control" })
                                            @Html.ValidationMessageFor(model => model.MeetingEmployee.RequirementOption_Id, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

