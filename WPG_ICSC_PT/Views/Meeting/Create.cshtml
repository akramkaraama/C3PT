@model BOL.ScheduleMeetingVewModel

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@*@using (Html.BeginForm("Create", "Meeting", FormMethod.Post))*@
