<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - WASHINGTON PRIME GROUP CONFERENCE SCHEDULING</title>

    @*<script src="~/Scripts/jquery-3.3.1.min.js"></script>*@

    <script src="~/Scripts/jquery.min.js"></script>
    <script src="~/Scripts/Bootstrap.min.js"></script>
    <link rel="stylesheet" type="text/css" href="~/Content/bootstrap.min.css">


    @*<script type="text/javascript" src="~/Content/bootstrap.min.js"></script>*@

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            @if (User.Identity.IsAuthenticated)
            {
                @Html.ActionLink("WPG Home", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                <ul class="nav navbar-nav">
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">
                            Schedule Meeting <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu" role="menu">
                            <li>@Html.ActionLink("Step1: Schedule Meeting", "Create", "ScheduleMeeting")</li>
                            <li>@Html.ActionLink("Step2: Asign Meeting to Employee", "Create", "MeetingEmployee")</li>
                            <li>@Html.ActionLink("Step3: Asign Employee to Guest", "Create", "EmployeeGuest")</li>
                        </ul>
                    </li>
                    <li>@Html.ActionLink("Guest Check-In", "Index", "CheckIn")</li>
                    <li>@Html.ActionLink("Reports", "Index", "Reports")</li>
                </ul>
            }
            else
            {
                @Html.ActionLink("WPG Login", "Login", "Security", new { area = "" }, new { @class = "navbar-brand" })
            }
        </div>

        @if (User.Identity.IsAuthenticated)
        {
            <div>
                <ul class="nav navbar-nav pull-right">
                    <li class="pull-right">@Html.ActionLink("LogOut", "LogOut", "Security")</li>
                    <li class="pull-right"><a href="#"><b>Welcome</b> @User.Identity.Name</a></li>
                </ul>
            </div>
        }
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer class="col-md-12">
            <p>&copy; @DateTime.Now.Year - WPG Conference Schduling Application</p>
        </footer>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
